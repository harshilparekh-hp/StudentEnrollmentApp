<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<center><h3>Register New Student</h3></center>

<script type="text/javascript">

    $(document).ready(function(){
        $('#alertSuccess').hide();
        $('#alertDanger').hide();
        $('#spinner').hide();

    })


    function Register(){
        $('#spinner').show();
        var studentObj = {
            FirstName: $('#firstname').val(),
            LastName: $('#lastname').val(),
            Email: $('#email').val()
        };

        $.ajax({

            url: '/Student/RegisterStudent',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(studentObj),
            success: function (response) {
                if (response == 'success') {
                    $('#spinner').hide();
                    $('#alertSuccess').show();
                    $('#alertSuccess').text('Student has been successfully registered');
                }
                else{
                    $('#spinner').hide();
                    $('#alertDanger').show();
                    $('#alertDanger').text('some error occured, try again!');
                }
            },
            error: function (errormessage) {
                $('#spinner').hide();
                $('#alertDanger').show();
                $('#alertDanger').text(errormessage.responseText);
            }

        });


    }


</script>


<div class="container">

    <form>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" id="firstname" placeholder="First Name" />
                </div>
            </div>
        </div>

        <br/>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" id="lastname" placeholder="Last Name" />
                </div>
            </div>
        </div>

        <br />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="email" class="form-control" id="email" placeholder="Email" />
                </div>
            </div>
        </div>
        <br />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="Register();">Register</button>
                </div>
            </div>
        </div>

        <br />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert alert-success" id="alertSuccess"></div>
                <div class="alert alert-danger" id="alertDanger"></div>

            </div>
        </div>
    </form>

    <center>
        <div class="spinner-border" role="status" id="spinner">
        </div>
    </center>

</div>